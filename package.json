{
  "name": "vite-starter-kit",
  "private": true,
  "version": "2.1.0",
  "type": "module",
  "author": {
    "name": "Hamid Yaftian",
    "email": "hamid.yaftian@gmail.com",
    "url": "https://github.com/hamidyfine"
  },
  "repository": {
    "url": "https://github.com/hamidyfine/vite-react-starter-kit"
  },
  "scripts": {
    "dev": "concurrently --kill-others \"npm run locale:extract:watch\" \"npm run locale:compile:watch\" \"vite --open --port 4005\"",
    "build": "tsc -b && npm run locale:extract && npm run locale:compile && vite build",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint . --report-unused-disable-directives --max-warnings 0 --fix",
    "lint:styles": "stylelint src/**/*.scss",
    "locale:extract": "lingui extract",
    "locale:extract:watch": "lingui extract --watch",
    "locale:compile": "lingui compile --typescript",
    "locale:compile:watch": "lingui compile --typescript --watch",
    "preview": "vite preview",
    "commit": "cz",
    "prepare": "husky",
    "bundle-analyzer": "npx bundlesize",
    "bundle-analyzer:visual": "npx vite-bundle-visualizer",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watch",
    "release": "npm run lint && npm run test && release-it"
  },
  "resolutions": {
    "@swc/core": "1.7.26"
  },
  "dependencies": {
    "@lingui/core": "^5.1.2",
    "@lingui/react": "^5.1.2",
    "@mantine/core": "^7.15.2",
    "@mantine/dates": "^7.15.2",
    "@mantine/hooks": "^7.15.2",
    "@mantine/modals": "^7.15.2",
    "@mantine/notifications": "^7.15.2",
    "concurrently": "^9.1.0",
    "dayjs": "^1.11.13",
    "lucide-react": "^0.469.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@eslint/js": "^9.17.0",
    "@lingui/cli": "^5.1.2",
    "@lingui/swc-plugin": "5.0.1",
    "@lingui/vite-plugin": "^5.1.2",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@stylistic/eslint-plugin-migrate": "^2.12.1",
    "@swc/jest": "^0.2.37",
    "@tanstack/eslint-plugin-router": "^1.87.6",
    "@tanstack/react-router": "^1.92.3",
    "@tanstack/router-devtools": "^1.92.3",
    "@tanstack/router-plugin": "^1.91.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "commitizen": "^4.3.1",
    "core-js": "^3.39.0",
    "cz-customizable": "^7.4.0",
    "eslint": "^9.17.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-lingui": "^0.9.0",
    "eslint-plugin-no-secrets": "^2.1.1",
    "eslint-plugin-perfectionist": "^4.4.0",
    "eslint-plugin-prefer-arrow-functions": "^3.4.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "postcss-html": "^1.7.0",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "release-it": "^17.11.0",
    "sass-embedded": "^1.83.0",
    "stylelint": "^16.12.0",
    "stylelint-config-hudochenkov": "^11.0.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.10.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.6",
    "vite-plugin-bundlesize": "^0.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint:scripts"
    ],
    "*.{css,scss}": [
      "npm run lint:styles"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  }
}
