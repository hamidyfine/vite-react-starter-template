{
  "name": "vite-react-starter-kit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "Hamid Yaftian",
    "email": "hamid.yaftian@gmail.com",
    "url": "https://github.com/hamidyfine"
  },
  "scripts": {
    "dev": "vite --port 4000 --open",
    "build": "tsc && vite build",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:styles": "stylelint src/**/*.scss",
    "preview": "vite preview",
    "commit": "cz",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fontsource-variable/sofia-sans": "^5.0.14",
    "@mantine/core": "^7.11.1",
    "@mantine/hooks": "^7.11.1",
    "@reduxjs/toolkit": "^2.2.6",
    "@tabler/icons-react": "^3.9.0",
    "flat": "^6.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-intl": "^6.6.8",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.24.1",
    "sass": "^1.77.6"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
